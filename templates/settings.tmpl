{{ define "content" }}
<header>
  <div class="content">
    <h1>Settings</h1>
  </div>
</header>

<main>
{{ with .Body }}
<div class="content">
  <form method="POST" action="/admin/settings">
  {{ template "frontmatter" . }}
  <input type="submit" data-message="Settings updated." data-regenerate="true" value="Save">
  </form>
</div>
{{ end }}
</main>

{{ end }}
